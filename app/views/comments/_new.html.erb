
<%= form_with model: [ post, Comment.new ] do |form| %>

    <div class="block mb-2 text-sm text-gray-600">Your comment:</div>
    <%= form.text_area :content, class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md  focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300" %>
    <%= form.submit class: "w-full px-2 py-4 text-white bg-indigo-500 rounded-md  focus:bg-indigo-600 focus:outline-none" %>
<% end %> 